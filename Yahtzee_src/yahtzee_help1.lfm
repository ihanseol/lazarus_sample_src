  object StaticText3: TStaticText
    Left = 10
    Height = 80
    Top = 520
    Width = 1152
    Caption = 'In either case the player selects a category, as usual. Scoring is the same as normal except that, if the Upper Section box corresponding to the Yahtzee has been used, the  Full House,  Small Straight and  Large Straight categories can be used to score 25, 30 or 40 (respectively) even though the dice do not meet the normal requirement for those categories. In this case the Yahtzee is said to act as a "Joker".'
    TabOrder = 5
  end
  object StaticText4: TStaticText
